{% layout none %}

{%- assign color_values = null -%}

{% comment %}
  Iterate through product options. If an option is 'color', extract its values, which should be an array of color swatches like: color_values => ['Black', 'Green', 'Brown', 'Blue', 'Red'].
{% endcomment %}

{%- for product_option in product.options_with_values -%}
  {%- assign product_option_name = product_option.name | handle -%}
  {%- if product_option_name == 'color' -%}
    {%- assign color_values = product_option.values -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

{{ color_values | json }}
{% comment %} { "color_values": {{ color_values | json }} } {% endcomment %}
