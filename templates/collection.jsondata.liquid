{% layout none %}
{
  "title": {{collection.title | escape | json }},
  "description": {{collection.description | escape | json }},
  "products" : [
    {% for product in collection.products %}
      {
        "title" : {{product.title  | escape | json }},
        "vairants" : [
          {% for variant in product.variants %}
            {
              "id" : {{variant.id | json}},
              "title" : {{variant.title | escape | json}}, 
              "option1" : {{variant.option1 | escape | json}},
              "option2" : {{variant.option2 | escape | json}},
              "option3" : {{variant.option3 | escape | json}}
            }
            {% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
      {% unless forloop.last %},{% endunless %}      
    {% endfor %}
  ]
}