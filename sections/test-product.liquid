<h1>test product section</h1>

<div class="container">
  <div class="left">
    {% for block in section.blocks %}
      <button id="btn-{{block.id}}">{{ block.settings.row_text }}</button>
    {% endfor %}
  </div>
  <div class="right">
    {% for block in section.blocks %}
      <div>
        <img id="img-{{block.id}}" src="{{ block.settings.row_img |  img_url: 'medium'}}" alt="">
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "test_product_section",
  "blocks": [
    {
      "type": "row",
      "name": "row_block",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "row_text",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "image_picker",
          "id": "row_img",
          "label": "Image"
        }
      ]
    }
  ],
  "settings": []
}
{% endschema %}
