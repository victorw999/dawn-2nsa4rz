  iterate through the product media and filter each item by its media type.
{% endcomment %}

{% assign imageMedia = product.media | where: 'media_type', 'image' %}
{% assign modelMedia = product.media | where: 'media_type', 'model' %}
{% assign videoMedia = product.media | where: 'media_type', 'video' %}
{% assign exvideoMedia = product.media | where: 'media_type', 'external_video' %}

{ 
  "image": {{ imageMedia | json }}, 
  "model": {{ modelMedia | json }}, 
  "video": {{ videoMedia | json }},
  "external_video": {{ exvideoMedia | json }} 
}
